<%-include("partials/_header")-%>
  <!-- Page Header -->
  <header class="masthead" style="background-image: url('images/contact-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="page-heading">
            <h1>Add New Post</h1>

          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <form method="POST" action="/blogs/<%=blog._id%>?_method=PUT"  encType="multipart/form-data">
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Post Title</label>
              <input type="text" class="form-control" value="<%= blog.title%>" name="title" placeholder="Blog Title" id="name" required data-validation-required-message="Please enter blog title.">
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Post Blog</label>
              <textarea rows="5" name="blog" class="form-control" placeholder="Blog" id="blog" required data-validation-required-message="Please enter blog."><%= blog.blog %> </textarea>
              <p class="help-block text-danger"></p>
            </div>
          </div>
         
          <br>
          
          <button type="submit" class="btn btn-primary" id="sendMessageButton">Update</button>
        </form>
      </div>
    </div>
  </div>

  <hr>

  <!-- Footer -->
  <%-include("partials/_footer")-%>

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Contact Form JavaScript -->
  <script src="js/jqBootstrapValidation.js"></script>
  <script src="js/contact_me.js"></script>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
